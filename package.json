{
  "name": "ecoute-electron",
  "version": "2.0.0",
  "description": "AI-powered research and transcription assistant",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\" \"npm run start:electron\"",
    "start:backend": "python backend/api_server.py",
    "start:frontend": "cd frontend && npm start",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "build": "cd frontend && npm run build",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "package": "npm run build && npm run build:all"
  },
  "build": {
    "appId": "com.ecoute.airesearchassistant",
    "productName": "Ecoute",
    "directories": {
      "buildResources": "assets",
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/*.pyc"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*", "!__pycache__", "!*.pyc"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "ai",
    "transcription",
    "research",
    "assistant",
    "electron"
  ],
  "author": "Ecoute",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
